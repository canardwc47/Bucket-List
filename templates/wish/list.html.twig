{% extends 'base.html.twig' %}

{% block title %}All wishes | {{ parent() }}{% endblock %}

{% block body %}
    <h2>All Wishes !</h2>
    <ul>
        {% for wish in wishes %}
            <li>
                <article>
                    <a href="{{ path('wishes_wish_detail', {'id': wish.id}) }}"
                       title="View this wish in details">{{ wish.title }}</a>
                    <a href="{{ path('wishes_wish_edit', {'id': wish.id}) }}"
                       title="Edit this wish">Edit</a>
                </article>
            </li>
        {% else %}
            <li>Pas de Wish dans la bd</li>
        {% endfor %}
    </ul>
{% endblock %}